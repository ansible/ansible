---
- debug: msg="START netconf/force.yaml"

- name: setup
  junos_config:
    lines:
      - set system host-name {{ inventory_hostname_short }}
      - delete interfaces lo0
    provider: "{{ netconf }}"

- name: configure basic config template
  junos_template:
    src: basic/config.j2
    provider: "{{ netconf }}"
    action: replace
  register: result

- assert:
    that:
      - "result.changed == true"
      - "'1.1.1.1/32' in result.diff.prepared"

- name: check basic config template idempotent
  junos_template:
    src: basic/config-update.j2
    action: replace
    provider: "{{ netconf }}"
  register: result

- assert:
    that:
      - "result.changed == true"
      - "'1.1.1.1/32' in result.diff.prepared"

- name: teardown
  junos_config:
    lines:
      - set system host-name {{ inventory_hostname_short }}
      - delete interfaces lo0
    action: replace
    provider: "{{ netconf }}"

- debug: msg="END netconf/force.yaml"
